<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Greeting App" Height="200" Width="400">
    <Grid>
        <!-- Username Input -->
        <TextBox Name="UsernameTextBox" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>

        <!-- Greet Button -->
        <Button Content="Greet Me" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="GreetButton_Click"/>

        <!-- Greeting Display -->
        <Label Name="GreetingLabel" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30" />
    </Grid>
</Window>
